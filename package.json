{
  "name": "dstdlib",
  "version": "0.0.8",
  "description": "A standard library for typescript",
  "repository": "https://github.com/dhruvrajvanshi/dstdlib",
  "author": "Dhruv Rajvanshi <dhruvrajvanshi@outlook.com>",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/esm/index.d.ts",
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.d.ts"
    }
  },
  "files": [
    "build",
    "src"
  ],
  "main": "build/cjs/index.js",
  "types": "build/esm/index.d.ts",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "test": "jest",
    "ci-test": "jest --coverage --ci --reporters=default --reporters=jest-junit"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "jest": "^29.3.1",
    "jest-junit": "^14.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {},
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
